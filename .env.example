# Trello API Configuration
TRELLO_API_KEY=xxx
TRELLO_API_TOKEN=xxx

# Trello Board Configuration
# You can specify multiple board IDs separated by commas
TRELLO_BOARD_IDS=GzkPM4ga

# Schedule Configuration (Cron format)
# Default: Every day at 9:00 AM
REMINDER_SCHEDULE=0 9 * * *

# WhatsApp Configuration
WHATSAPP_API_URL=xx
WHATSAPP_API_TOKEN=xx
WHATSAPP_GROUP_ID=xx

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Time Zone (for accurate scheduling)
TZ=UTC

# Report Configuration
# Include cards that were updated within the last N days
DAYS_TO_CHECK=7
# Include card labels in report (true/false)
INCLUDE_LABELS=true
# Include due dates in report (true/false)
INCLUDE_DUE_DATES=true
